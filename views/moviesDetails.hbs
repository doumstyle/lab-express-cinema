<div class="container">
            
        <img src={{movie.image}} alt={{movie.title}} />
        <div class="details">
            <a href="/movies">Go Back</a>
            <h3>{{movie.title}}</h3>
            <p>Director: {{movie.director}}</p>
            <p>Stars :</p>
            <ul>
            {{#each movie.stars}}
                    <li>{{this}}</li>
            {{/each}}
            </ul>
            <p>{{movie.description}}</p>
            <p>
                {{#each movie.showtimes}}
                <span>{{this}} </span>
                    {{#unless @last}}
                        <span>| </span>
                    {{/unless}}
                {{/each}}
            </p>
        </div>
</div>