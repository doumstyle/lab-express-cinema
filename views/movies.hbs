<div class="header">
	<h2>Ironhack Cinema</h2>
	<p>Click on the movie to check the showtimes!</p>
</div>

<div class="container">
	{{#each movies}}

		<div class="card">
			<img src="{{this.image}}" alt="{{this.title}}" />
			<p>{{this.title}}</p>
			<a href="/movies/{{this._id}}">See more...</a>
		</div>

	{{/each}}

</div>